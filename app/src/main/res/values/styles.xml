<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom style for BottomNavigationView -->
    <style name="NoShadowBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="elevation">0dp</item>
    </style>


    <!-- Launcher theme -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Login theme -->
    <style name="AppTheme.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- TimePickerDialog Theme -->
    <style name="TimePickerDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Add these styles to your styles.xml file -->
    <style name="NumberPickerText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="NumberPickerBlueText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">#03A9F4</item>
    </style>

    <style name="TimePickerTheme">TimePickerTheme</style>
</resources>